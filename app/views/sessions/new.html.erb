<h1>Se connecter</h1>
<div class="form-group container">
<%= form_tag sessions_path, method: "post" do %>

<%= label_tag 'Adresse email' %>
<%= email_field_tag 'email', @user.email , class: 'form-control'%>
<br/>
<br/>

<%= label_tag 'Mot de passe' %>
<%= password_field_tag 'password', @user.password , class: 'form-control'%>
<br/>
<br/>

<%= submit_tag "Se connecter" , class: 'form-control btn btn-primary'%>

<% end %>
</div>
