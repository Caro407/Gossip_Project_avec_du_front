<h1>S'inscrire</h1>

<div class="form-group container">
  <%= form_tag users_path, method: "post" do %>

  <%= label_tag 'Prénom' %>
  <%= text_field_tag 'first_name', @user.first_name, class: 'form-control'%>
  <br/>
  <br/>

  <%= label_tag 'Nom' %>
  <%= text_field_tag 'last_name', @user.last_name, class: 'form-control'%>
  <br/>
  <br/>

  <%= label_tag 'Adresse email' %>
  <%= email_field_tag 'email', @user.email, class: 'form-control'%>
  <br/>
  <br/>

  <%= label_tag 'Ville de résidence' %>
  <%= select_tag 'city', options_from_collection_for_select(@cities, "id", "name", @user.city), class: 'form-control'%>
  <br/>

  <%= label_tag 'Mot de passe' %>
  <%= password_field_tag 'password', @user.password, class: 'form-control'%>
  <br/>
  <br/>

  <%= label_tag 'Confirmation du mot de passe' %>
  <%= password_field_tag 'password_confirmation', @user.password_confirmation, class: 'form-control'%>
  <br/>
  <br/>

  <%= submit_tag "Se créer un compte", class: 'btn btn-primary form-control' %>

<% end %>
</div>
