<h1>S'inscrire</h1>

<%= form_tag users_path, method: "post" do %>

<%= label_tag 'Prénom' %>
<%= text_field_tag 'first_name', @user.first_name %>
<br/>
<br/>

<%= label_tag 'Nom' %>
<%= text_field_tag 'last_name', @user.last_name %>
<br/>
<br/>

<%= label_tag 'Adresse email' %>
<%= text_field_tag 'email', @user.email %>
<br/>
<br/>

<%= label_tag 'Ville de résidence' %>
<%= select_tag 'city', options_from_collection_for_select(@cities, "id", "name", @user.city)%>
<br/>

<%= label_tag 'Mot de passe' %>
<%= text_field_tag 'password', @user.password %>
<br/>
<br/>

<%= label_tag 'Confirmation du mot de passe' %>
<%= text_field_tag 'password_confirmation', @user.password_confirmation %>
<br/>
<br/>

<%= submit_tag "Se créer un compte" %>

<% end %>
