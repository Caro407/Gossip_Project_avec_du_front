<h1>POTIN N°<%= params[:id]%></h1>

<div class="ml-2">

  <p><span class="attribute">Titre: </span>
    <%= @gossip.title %></p>
  <p><span class="attribute">Contenu</span>
    <%= @gossip.content %></p>
  <p><span class="attribute">Date de création: </span>
    <%= I18n.l(@gossip.created_at, format: :long) %></p>

    <p><span class="attribute">Auteur: </span>
      <%= @gossip.user.full_name %></p>
      <p><span class="attribute">Ville de résidence: </span>
        <%= @city %></p>

        <div class="list-group">
          <h3>Commentaires :</h3>
          <% @gossip.comments.each do |comment| %>
          <button type="button" class="list-group-item list-group-item-action">
            <%= comment.user.first_name %>
            <br/>
            <%= link_to "#{comment.content}", gossip_comment_path(params[:id], comment.id)%>
            <br/>
            Ajouté le <%= I18n.l(comment.created_at, format: :short) %>
          </button>
          <% end %>
          </div>

<% if current_user == @gossip.user %>
  <%= link_to "Modifier ce potin", edit_gossip_path(params[:id])%>
<br />
<%= link_to "Supprimer ce potin", gossip_path(params[:id]), "data-confirm": "Êtes-vous sûr?", "data-method": :delete%>
<br />
<% end %>
<% if logged_in? %>
  <%= link_to "Ajouter un commentaire", new_gossip_comment_path(@gossip.id)  %>
<br />
  <% like = current_user.find_like(@gossip) %>
  <% if like.blank? %>
    <%= link_to "♡", gossip_likes_path(@gossip.id), "data-method": :post, class: 'like-btn'%>
    <% else %>
    <%= link_to "❤", gossip_like_path(@gossip.id, like.id), "data-method": :delete, class: 'like-btn'%>
  <% end %>
<% end %>
<br />
<br />
  <%= link_to "Voir le profil de #{@gossip.user.full_name}", user_path(@gossip.user_id)%>
  <br />
  <%= link_to "Voir les potins de #{@gossip.user.city.name}", city_path(@gossip.user.city)%>
</div>
